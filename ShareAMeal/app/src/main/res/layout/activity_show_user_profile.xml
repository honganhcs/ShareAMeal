<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowUserProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userProfilePic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/profile128px"
            app:civ_border_color="#CEA267"
            app:civ_border_width="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Username"
            android:textColor="#AF1B1B"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/userProfilePic"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="@+id/userProfilePic"
            app:layout_constraintTop_toBottomOf="@+id/userProfilePic" />

        <TextView
            android:id="@+id/descriptionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Profile Description"
            android:textColor="#AF1B1B"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/userNameTxt"
            app:layout_constraintStart_toStartOf="@+id/userNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/userNameTxt" />

        <TextView
            android:id="@+id/weeklyPointsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Weekly Points: "
            android:textColor="#EC7423"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/userNameTxt"
            app:layout_constraintStart_toStartOf="@+id/userNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTxt" />

        <TextView
            android:id="@+id/allTimePointsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="All-Time Points: "
            android:textColor="#EC7423"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/userNameTxt"
            app:layout_constraintStart_toStartOf="@+id/userNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/weeklyPointsTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>