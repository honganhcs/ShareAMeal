<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:backgroundTint="#FFEEA9"
    android:id="@+id/cvReportedDonor"
    app:strokeWidth="1dp"
    app:strokeColor="#AF1B1B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

            <TextView
                android:id="@+id/txt_donor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Donor name"
                android:textColor="#C45508"
                android:textSize="25sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txt_donor_reportsNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Number of Reports: 0"
                android:textColor="#C45508"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>