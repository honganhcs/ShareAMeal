<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/emailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email address"
        app:layout_constraintEnd_toEndOf="@+id/emailEdtWrapper"
        app:layout_constraintStart_toStartOf="@+id/emailEdtWrapper"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_marginTop="40dp"
        android:layout_marginRight="80dp"
        android:textSize="18dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailEdtWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailHeader">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Email"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/passwordHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="110dp"
        android:text="Enter your password"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/pwEdtWrapper"
        app:layout_constraintStart_toStartOf="@+id/pwEdtWrapper"
        app:layout_constraintTop_toBottomOf="@+id/emailEdtWrapper" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pwEdtWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordHeader">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Password"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/changePwVisibility"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/showpassword"
        app:layout_constraintBottom_toBottomOf="@+id/pwEdtWrapper"
        app:layout_constraintEnd_toEndOf="@+id/pwEdtWrapper"
        app:layout_constraintTop_toBottomOf="@+id/passwordHeader" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwEdtWrapper" />

</androidx.constraintlayout.widget.ConstraintLayout>